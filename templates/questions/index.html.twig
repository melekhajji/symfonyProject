{% extends 'back.html.twig' %}
{% block title%} Liste des Question{% endblock %}


{% block body %}
    {% if questions %}
        <table id="questions" class="table table-striped">
            <thead>
            <tr>

                <th>Enoncé</th>

                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for question in questions %}
                <tr>
                    <td>{{ question.id }}</td>
                    <td>{{ question.enonce }}</td>
                    <td>{{ question.note }}</td>
                    <td>{{ question.reponse }}</td>
                    <td>{{ question.quiz.id }}</td>
                    <td>
                        <a href="/question/{{ question.id }}" class="btn btn-dark">Détails</a>
                        <a href="/question/edit/{{ question.id }}" class="btn btn-dark">Modifier</a>
                        <a href="/question/delete/{{ question.id }}" class="btn btn-danger"
                           onclick="return confirm('Etes-vous sûr de supprimer cet question?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun Question</p>
    {% endif %}
{% endblock %}