

{% extends 'back.html.twig' %}
{% block container %}



            <main class="content">
                <div class="container-fluid p-0">

                    <h1 class="h3 mb-3">Liste des personnels tri√©e</h1>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">

                                            <thead>

                                            <tr>
                                                <th>Id</th>
                                                <th><i class="icon_mail_alt"></i>Email</th>
                                                <th>Roles</th>
                                                <th>Password</th>
                                                <th>Cin</th>
                                                <th>Username</th>
                                                <th>actions</th>
                                            </tr>

                                            </thead>
                                            <tbody>
                                            {% for userN in userN %}
                                                <tr>
                                                    <td>{{ userN.id }}</td>
                                                    <td>{{ userN.email }}</td>
                                                    <td>{{ userN.roles ? userN.roles|json_encode : '' }}</td>
                                                    <td>{{ userN.password }}</td>
                                                    <td>{{ userN.cin }}</td>
                                                    <td>{{ userN.username }}</td>

                                                    <td>
                                                        <a href="{{ path('users_edit', {'id': userN.id}) }}">Update</a>
                                                        <a href="{{ path('users_delete', {'id': userN.id}) }}">delete</a>
                                                        <a href="{{ path('users_show', {'id': userN.id}) }}">show</a>

                                                    </td>



                                                </tr>





                                            {% else %}
                                                <tr>
                                                    <td colspan="7">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                        <a href="{{ path('users_new') }}">Create new</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>




            </main>

{% endblock %}